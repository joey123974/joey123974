char c;

void setup() {
  // put your setup code here, to run once:
pinMode(13,OUTPUT);
Serial.begin(9600);
digitalWrite(13,LOW);
}

void loop() {
  // put your main code here, to run repeatedly:
if(Serial.available()){
  c=Serial.read();

if(c=='0')
digitalWrite(13,HIGH);
else if(c=='C')
digitalWrite(13,LOW);
else
Serial.print("輸入錯誤");

delay(1000);
 }
}
